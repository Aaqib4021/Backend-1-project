<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            type="text"
            placeholder="Title here"
            class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none"
            name="title"
          />
          <textarea
            placeholder="write task details here"
            class="block mt-2 px-5 py-2 bg-zinc-800 resize-none w-full rounded-md outline-none"
            name="details"
          ></textarea>
          <input
            type="submit"
            value="Create Task"
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
          />
        </form>
      </div>
      <div class="tasks p-10 text-white flex gap-4 flex-wrap">
        <% if(files.length > 0){%> <%files.forEach(function(val){ %>
        <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-3xl tracking-tighter"><%= val%></h1>
          <div class="mt-3 flex justify-between">
            <a class="text-blue-500 inline-block" href="/file/<%= val%>"
              >Read More</a
            >
            <a class="text-blue-500" href="/edit/<%=val%>">Edit FileName</a>
          </div>
        </div>
        <%})%> <% }else{%>
        <h3 class="text-zinc-600">No tasks yet</h3>
        <% }%>
      </div>
    </div>
  </body>
</html>
