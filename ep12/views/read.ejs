<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen bg-zinc-900 text-white">
    <div class="main w-full min-h-full bg-zinc-900 p-10">
      <a class="text-blue-500" href="/">Back to Home</a>
      <h1 class="text-3xl tracking-tighter mb-4">All Users</h1>
      <div class="users flex gap-8 flex-wrap">
        <%users.forEach(function(user){%>
        <div class="user w-64 bg-zinc-800 p-4 rounded-lg">
          <div class="w-full h-52 bg-zinc-600 overflow-hidden rounded-lg">
            <img
              src="<%= user.image%>"
              alt="user-image"
              class="w-full h-full object-cover rounded-lg"
            />
          </div>
          <h3 class="text-xl my-2"><%=user.name%></h3>
          <h5 class="mb-2"><%=user.email%></h5>
          <div class="flex justify-between">
            <a class="text-zinc-500" href="/edit/<%= user._id%>">Edit User</a>
            <a class="text-red-500" href="/delete/<%= user._id%>"
              >Delete User</a
            >
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </body>
</html>
